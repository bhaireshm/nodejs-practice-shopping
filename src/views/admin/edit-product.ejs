<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (isEditing) { %>edit-product<%} else { %>add-product<%}%>" method="POST">
            <% if(isEditing) { %> <input type=" hidden" name="productId" value="<%= product.id %>"> <% }%>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required value="<% if (isEditing) { %><%=product.title%><%}%>">
            </div>
            <div class="form-control">
                <label for="img-url">Image URL</label>
                <input type="text" name="imgUrl" id="img-url" required value="<% if (isEditing) { %><%=product.imgUrl%><%}%>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" step="0.01" name="price" required id="price" value="<% if (isEditing) { %><%=product.price%><%}%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea rows='5' name="description" id="description" required ><% if (isEditing) { %><%=product.description%><%}%></textarea>
            </div>
            <button class="btn" type="submit">
                <% if(isEditing) { %> Update Product <% } else { %> Add Product <% }%>
            </button>
        </form>
    </main>
    
    <%- include('../includes/end.ejs') %>